import graph

"""
LangGraph orchestration for the telecom support demo.

Flow:
  START → Router → (Technical | Billing | Fallback) → END

State (TypedDict) fields used:
  - history: list[{role: 'user'|'assistant', content: str}]
  - user_id: Optional[str]
  - last_agent: Optional['technical'|'billing'|'fallback']
  - context_flags: dict
  - last_docs: list (technical sources for audit)
  - route: str (set by Router)
  - reply: str (agent reply)

Usage:
  from graph import build_graph, run_turn
  app = build_graph(llm, retriever, billing_tools)
  state = {"history": [], "user_id": "u123"}
  state = run_turn(app, state, "I want a refund for last invoice PLN 30")

Requirements:
  langgraph>=0.2, langchain-core>=0.2
"""
from __future__ import annotations

from typing import Any, Dict, List, Optional, TypedDict, Literal

from langgraph.graph import StateGraph, START, END
from langchain_core.language_models.chat_models import BaseChatModel

# Local imports
from agents.router_agent import RouterAgent, ConversationState as RouterState
from agents.technical_agent import TechnicalAgent, ConversationState as TechState
from agents.billing_agent import BillingAgent, ConversationState as BillState
from agents.fallback_agent import FallbackAgent, ConversationState as FallbackState
from retriever.retriever import KBRetriever


# -----------------------------
# State definition
# -----------------------------

class GraphState(TypedDict, total=False):
    history: List[Dict[str, str]]
    user_id: Optional[str]
    last_agent: Optional[Literal["technical", "billing", "fallback"]]
    context_flags: Dict[str, Any]
    last_docs: List[Dict[str, Any]]
    route: Literal["technical", "billing", "fallback"]
    reply: str


# -----------------------------
# Node impls
# -----------------------------

class Nodes:
    def __init__(self, llm: BaseChatModel, retriever: KBRetriever, billing_agent: BillingAgent | None = None):
        self.router = RouterAgent(llm=llm)
        self.technical = TechnicalAgent(llm=llm, retriever=retriever)
        self.billing = billing_agent  # allow external initialization with bound tools
        self.fallback = FallbackAgent()
        self.llm = llm

    # Router node: classify message
    def router_node(self, state: GraphState) -> GraphState:
        last_agent = state.get("last_agent")
        rs = RouterState(history=state.get("history", []), last_agent=last_agent)
        # The last message from user is at the end of history
        # (We expect run_turn to append the user message before execution.)
        user_msg = next((m["content"] for m in reversed(state.get("history", [])) if m.get("role") == "user"), "")
        routed = self.router.route(rs, user_msg)
        state["route"] = routed["route"]  # 'technical' | 'billing' | 'fallback'
        # Optionally log reasons/confidence in state for debugging
        state.setdefault("_router_debug", []).append(routed)
        return state

    # Technical node
    def technical_node(self, state: GraphState) -> GraphState:
        ts = TechState(history=state.get("history", []), last_docs=state.get("last_docs", []))
        user_msg = next((m["content"] for m in reversed(state.get("history", [])) if m.get("role") == "user"), "")
        out = self.technical.run(ts, user_msg)
        reply = out["reply"]
        state.setdefault("history", []).append({"role": "assistant", "content": reply})
        state["last_agent"] = "technical"
        # store sources for audit
        state["last_docs"] = out.get("sources", [])
        state["reply"] = reply
        return state

    # Billing node
    def billing_node(self, state: GraphState) -> GraphState:
        if self.billing is None:
            raise RuntimeError("BillingAgent not initialized with tools.")
        bs = BillState(history=state.get("history", []), user_id=state.get("user_id"), context_flags=state.get("context_flags", {}))
        user_msg = next((m["content"] for m in reversed(state.get("history", [])) if m.get("role") == "user"), "")
        out = self.billing.run(bs, user_msg)
        reply = out["reply"]
        state.setdefault("history", []).append({"role": "assistant", "content": reply})
        state["last_agent"] = "billing"
        # merge updates
        updates = out.get("updates", {})
        if updates:
            # shallow merge for known keys
            if "context_flags" in updates:
                state.setdefault("context_flags", {}).update(updates["context_flags"]) 
            for k, v in updates.items():
                if k != "context_flags":
                    state[k] = v
        state["reply"] = reply
        return state

    # Fallback node
    def fallback_node(self, state: GraphState) -> GraphState:
        fs = FallbackState(history=state.get("history", []), last_agent=state.get("last_agent"))
        user_msg = next((m["content"] for m in reversed(state.get("history", [])) if m.get("role") == "user"), "")
        out = self.fallback.run(fs, user_msg)
        reply = out["reply"]
        state.setdefault("history", []).append({"role": "assistant", "content": reply})
        state["last_agent"] = "fallback"
        # route hint is advisory; Router will re-evaluate next turn
        state["reply"] = reply
        return state


# -----------------------------
# Graph builder
# -----------------------------

def build_graph(llm: BaseChatModel, retriever: KBRetriever, billing_agent: BillingAgent) -> StateGraph:
    nodes = Nodes(llm=llm, retriever=retriever, billing_agent=billing_agent)

    g = StateGraph(GraphState)
    g.add_node("router", nodes.router_node)
    g.add_node("technical", nodes.technical_node)
    g.add_node("billing", nodes.billing_node)
    g.add_node("fallback", nodes.fallback_node)

    g.add_edge(START, "router")

    def _route_switch(state: GraphState) -> str:
        r = state.get("route", "fallback")
        if r == "technical":
            return "technical"
        if r == "billing":
            return "billing"
        return "fallback"

    g.add_conditional_edges("router", _route_switch, {"technical": "technical", "billing": "billing", "fallback": "fallback"})

    # After any specialist agent reply → END (one-step turn). The app-level loop handles multi-turn.
    g.add_edge("technical", END)
    g.add_edge("billing", END)
    g.add_edge("fallback", END)

    return g.compile()


# -----------------------------
# Helper: one chat turn helper
# -----------------------------

def run_turn(app, state: GraphState, user_message: str) -> GraphState:
    """Append the user message to history, execute one graph pass, return updated state."""
    state = dict(state or {})
    state.setdefault("history", []).append({"role": "user", "content": user_message})
    # RUN
    new_state = app.invoke(state)
    return new_state

